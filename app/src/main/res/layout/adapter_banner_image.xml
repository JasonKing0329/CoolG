<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/def_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_set_cover"
        android:layout_width="@dimen/gdb_record_icon_size"
        android:layout_height="@dimen/gdb_record_icon_size"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_oval_transgrey"
        android:padding="@dimen/gdb_record_icon_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_burst_mode_white_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/gdb_record_icon_size"
        android:layout_height="@dimen/gdb_record_icon_size"
        android:background="@drawable/shape_oval_transgrey"
        android:padding="@dimen/gdb_record_icon_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete_white_36dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_set_cover"/>

</android.support.constraint.ConstraintLayout>