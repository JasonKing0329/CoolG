<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="bean"
            type="com.king.app.coolg.phone.video.home.RecommendBean"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sql_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dlg_recommend_margin_hor"
            android:layout_marginTop="24dp"
            android:text="Sql (conditions for table record)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_often"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/dlg_recommend_margin_hor"
            android:text="Expressions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sql_title" />

        <EditText
            android:id="@+id/et_sql"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dlg_recommend_margin_hor"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dlg_recommend_margin_hor"
            android:hint="eg. score>=400 and scene='bed'"
            android:text="@{bean.sql}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_often" />

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dlg_recommend_margin_hor"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dlg_recommend_margin_hor"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_sql">

            <CheckBox
                android:id="@+id/cb_type_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isTypeAll}"
                android:text="All" />

            <CheckBox
                android:id="@+id/cb_type_1v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isType1v1}"
                android:text="1v1" />

            <CheckBox
                android:id="@+id/cb_type_3w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isType3w}"
                android:text="3w" />

            <CheckBox
                android:id="@+id/cb_type_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isTypeMulti}"
                android:text="Multi" />

            <CheckBox
                android:id="@+id/cb_type_together"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isTypeTogether}"
                android:text="Together" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_ftype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dlg_recommend_margin_hor"
            android:layout_marginTop="8dp"
            android:checked="@{bean.withFkType}"
            android:text="With F type(Only effective for type 1v1)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_type" />

        <LinearLayout
            android:id="@+id/ll_ftype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dlg_recommend_margin_hor"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dlg_recommend_margin_hor"
            android:orientation="horizontal"
            android:visibility="@{bean.withFkType ? View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_ftype">

            <CheckBox
                android:id="@+id/cb_ftype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isFkType1}"
                android:text="1" />

            <CheckBox
                android:id="@+id/cb_ftype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isFkType2}"
                android:text="2" />

            <CheckBox
                android:id="@+id/cb_ftype3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isFkType3}"
                android:text="3" />

            <CheckBox
                android:id="@+id/cb_ftype4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isFkType4}"
                android:text="4" />

            <CheckBox
                android:id="@+id/cb_ftype5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isFkType5}"
                android:text="5" />

            <CheckBox
                android:id="@+id/cb_ftype6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{bean.isFkType6}"
                android:text="6" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ok"
            style="@style/TvDialogConfirmBase"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_ftype" />
    </android.support.constraint.ConstraintLayout>
</layout>