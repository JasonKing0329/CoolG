<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".pad.record.RecordPadActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.king.app.coolg.view.widget.banner.CoolBanner
            android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/group_bottom"
            app:switchDuration="5000"/>

        <ImageView
            android:id="@+id/iv_back"
            style="@style/IvPadActionIcon"
            android:src="@drawable/ic_arrow_back_white_36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_order"
            style="@style/IvPadActionIcon"
            android:src="@drawable/ic_favorite_border_white_36dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_set_cover"
            style="@style/IvPadActionIcon"
            android:src="@drawable/ic_insert_photo_white_36dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/iv_order"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/IvPadActionIcon"
            android:src="@drawable/ic_delete_white_36dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/iv_set_cover"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_play"
            style="@style/IvPadActionIcon"
            android:src="@drawable/ic_play_arrow_white_36dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/iv_delete"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/group_bottom"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:text="534"
                android:textSize="36dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dasjgoewijiogaewji"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_parent"
                app:layout_constraintStart_toEndOf="@id/tv_score"
                app:layout_constraintEnd_toStartOf="@+id/tv_scene"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="dasjgoewijiogaewji"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_score"
                app:layout_constraintEnd_toStartOf="@+id/tv_scene"/>
            <TextView
                android:id="@+id/tv_bareback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Bareback"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@id/tv_score"
                app:layout_constraintBottom_toBottomOf="@id/tv_parent"/>
            <TextView
                android:id="@+id/tv_scene"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="abandon room"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_studio"/>
            <TextView
                android:id="@+id/tv_studio"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Studio"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_scene"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <com.king.app.coolg.view.widget.PointListView
            android:id="@+id/group_fk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            app:pointTextSize="18dp"
            app:pointSize="110dp"
            app:pointMargin="7dp"
            app:resizeWhenOver="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/group_bottom"/>

        <!-- 用于控制最大高度，嵌套一个指定高度的LinearLayout -->
        <LinearLayout
            android:id="@+id/group_detail"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:gravity="bottom"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/group_bottom">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_record_detail_bg"
                android:padding="16dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_stars_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_score_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_record_detail_bg"
            android:padding="10dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_order">
            <TextView
                android:id="@+id/tv_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:drawableBottom="@drawable/ic_add_white_36dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:listitem="@layout/adapter_star_orders"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>